// Test Case: String Manipulation and Built-in Functions
class StringOperationsTest {
    static kaam main() {
        // Basic string operations
        sab text1 = "Hello";
        sab text2 = "World";
        sab combined = text1 + " " + text2;
        printLine("Combined: " + combined);
        
        // String methods testing
        sab testString = "Programming in DhrLang";
        printLine("Original: " + testString);
        printLine("Length: " + testString.length());
        printLine("Character at index 5: " + testString.charAt(5));
        
        // String search operations
        printLine("Index of 'gram': " + testString.indexOf("gram"));
        printLine("Index of 'Lang': " + testString.indexOf("Lang"));
        printLine("Index of 'xyz': " + testString.indexOf("xyz"));
        
        // String contains check
        printLine("Contains 'Program': " + testString.contains("Program"));
        printLine("Contains 'Java': " + testString.contains("Java"));
        
        // String replace operations
        sab replaced = testString.replace("DhrLang", "Java");
        printLine("After replace: " + replaced);
        
        // String comparison
        sab str1 = "apple";
        sab str2 = "apple";
        sab str3 = "banana";
        
        printLine("'" + str1 + "' equals '" + str2 + "': " + str1.equals(str2));
        printLine("'" + str1 + "' equals '" + str3 + "': " + str1.equals(str3));
        
        // Working with character arrays
        sab alphabet = "abcdefghijklmnopqrstuvwxyz";
        printLine("Alphabet: " + alphabet);
        printLine("Alphabet length: " + alphabet.length());
        
        // Extract characters
        printLine("First 5 characters:");
        for (num i = 0; i < 5; i++) {
            printLine("Index " + i + ": " + alphabet.charAt(i));
        }
        
        // String building in loops
        sab numbers = "";
        for (num i = 1; i <= 10; i++) {
            numbers = numbers + i;
            if (i < 10) {
                numbers = numbers + ", ";
            }
        }
        printLine("Numbers: " + numbers);
        
        // Complex string manipulation
        sab sentence = "The quick brown fox jumps over the lazy dog";
        printLine("Original sentence: " + sentence);
        
        // Count specific characters
        num spaceCount = 0;
        for (num i = 0; i < sentence.length(); i++) {
            if (sentence.charAt(i).equals(" ")) {
                spaceCount++;
            }
        }
        printLine("Number of spaces: " + spaceCount);
        printLine("Number of words (approximately): " + (spaceCount + 1));
        
        // String pattern matching
        sab pattern = "the";
        num patternCount = 0;
        for (num i = 0; i <= sentence.length() - pattern.length(); i++) {
            kya match = true;
            for (num j = 0; j < pattern.length(); j++) {
                if (!sentence.charAt(i + j).equals(pattern.charAt(j))) {
                    match = false;
                    break;
                }
            }
            if (match) {
                patternCount++;
            }
        }
        printLine("Occurrences of '" + pattern + "': " + patternCount);
    }
}
