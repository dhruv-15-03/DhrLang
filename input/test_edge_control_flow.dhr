// Purpose: Stress control flow constructs, break/continue edge behavior
class ControlFlowEdges {
    static kaam main() {
        // Nested loops with break/continue
        for (num i = 0; i < 3; i++) {
            for (num j = 0; j < 3; j++) {
                if (i == 1 && j == 1) continue;
                if (i == 2 && j == 0) break;
                printLine("i=" + i + ", j=" + j);
            }
        }
        // While with mutation inside
        num k = 0;
        while (k < 5) {
            if (k == 3) {
                k = k + 2; // jump
                continue;
            }
            printLine("k=" + k);
            k++;
        }
    }
}
