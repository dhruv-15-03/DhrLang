// Purpose: String method boundaries and invalid usages
class StringEdgeCases {
    static kaam main() {
        sab s = "abcdef";
        printLine("len=" + s.length());
        printLine("idxOf c=" + s.indexOf("c"));
        printLine("contains def=" + s.contains("def"));
        printLine("replace cd->XY: " + s.replace("cd", "XY"));
        // Invalid usages (should surface errors/warnings)
        num bad = s.length() + "x";            // type error
        kya bad2 = s.indexOf("a");              // assigning num to kya
        sab bad3 = s.charAt(100);                // runtime bounds maybe
        num idx = -1;
        sab bad4 = s.charAt(idx);                // negative index
    }
}
