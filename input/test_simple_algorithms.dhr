// Test Case: Simplified Algorithms (avoiding division type issues)
class SimpleAlgorithm {
    // Linear search instead of binary search
    static num linearSearch(num[] arr, num target) {
        for (num i = 0; i < arrayLength(arr); i++) {
            if (arr[i] == target) {
                return i;
            }
        }
        return -1;
    }
    
    // Fibonacci sequence
    static num fibonacci(num n) {
        if (n <= 1) {
            return n;
        }
        return SimpleAlgorithm.fibonacci(n - 1) + SimpleAlgorithm.fibonacci(n - 2);
    }
    
    // Greatest Common Divisor using subtraction (avoiding division)
    static num gcdBySubtraction(num a, num b) {
        while (a != b) {
            if (a > b) {
                a = a - b;
            } else {
                b = b - a;
            }
        }
        return a;
    }
    
    // Find maximum value in array
    static num findMax(num[] arr) {
        if (arrayLength(arr) == 0) {
            return 0;
        }
        
        num max = arr[0];
        for (num i = 1; i < arrayLength(arr); i++) {
            if (arr[i] > max) {
                max = arr[i];
            }
        }
        return max;
    }
    
    // Count occurrences of a number in array
    static num countOccurrences(num[] arr, num target) {
        num count = 0;
        for (num i = 0; i < arrayLength(arr); i++) {
            if (arr[i] == target) {
                count++;
            }
        }
        return count;
    }
}

class SimpleAlgorithmTest {
    static kaam printArray(num[] arr) {
        for (num i = 0; i < arrayLength(arr); i++) {
            if (i > 0) {
                print(", ");
            }
            print(arr[i]);
        }
        printLine("");
    }
    
    static kaam main() {
        // Test array operations
        num[] numbers = [64, 34, 25, 12, 22, 11, 90, 25];
        printLine("Array:");
        SimpleAlgorithmTest.printArray(numbers);
        
        // Test linear search
        num searchTarget = 25;
        num index = SimpleAlgorithm.linearSearch(numbers, searchTarget);
        if (index != -1) {
            printLine("Found " + searchTarget + " at index " + index);
        } else {
            printLine(searchTarget + " not found");
        }
        
        // Test max finding
        num maxValue = SimpleAlgorithm.findMax(numbers);
        printLine("Maximum value: " + maxValue);
        
        // Test counting occurrences
        num count = SimpleAlgorithm.countOccurrences(numbers, 25);
        printLine("Number 25 appears " + count + " times");
        
        // Test Fibonacci
        printLine("Fibonacci sequence (first 10 numbers):");
        for (num i = 0; i < 10; i++) {
            print(SimpleAlgorithm.fibonacci(i));
            if (i < 9) {
                print(", ");
            }
        }
        printLine("");
        
        // Test GCD by subtraction
        printLine("GCD of 48 and 18 (by subtraction): " + SimpleAlgorithm.gcdBySubtraction(48, 18));
        printLine("GCD of 100 and 25 (by subtraction): " + SimpleAlgorithm.gcdBySubtraction(100, 25));
        
        // Performance test with arrays
        num[] largeArray = new num[100];
        for (num i = 0; i < 100; i++) {
            largeArray[i] = i * 2;
        }
        
        num searchValue = 50;
        num foundIndex = SimpleAlgorithm.linearSearch(largeArray, searchValue);
        if (foundIndex != -1) {
            printLine("Found " + searchValue + " in large array at index " + foundIndex);
        }
        
        num largeMax = SimpleAlgorithm.findMax(largeArray);
        printLine("Maximum in large array: " + largeMax);
    }
}
