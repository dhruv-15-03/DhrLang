{
  "Main Class Entry": {
    "prefix": ["main"],
    "body": [
      "class Main {",
      "\tstatic kaam main() {",
      "\t\t$1",
      "\t}\n}"
    ],
    "description": "DhrLang entry class with static kaam main()"
  },
  "Print Line": {
    "prefix": ["print"],
    "body": [
      "printLine(\"$1\");"
    ],
    "description": "printLine() call"
  },
  "If Statement": {
    "prefix": ["if"],
    "body": [
      "if ($1) {",
      "\t$2",
      "}"
    ],
    "description": "If statement"
  },
  "If Else Statement": {
    "prefix": ["ifelse"],
    "body": [
      "if ($1) {",
      "\t$2",
      "} else {",
      "\t$3",
      "}"
    ],
    "description": "If/else statement"
  },
  "While Loop": {
    "prefix": ["while"],
    "body": [
      "while ($1) {",
      "\t$2",
      "}"
    ],
    "description": "While loop"
  },
  "For Loop": {
    "prefix": ["for"],
    "body": [
      "for (num ${1:i} = ${2:0}; ${1:i} ${3:<} ${4:10}; ${1:i}++) {",
      "\t$5",
      "}"
    ],
    "description": "For loop"
  },
  "Foreach Loop": {
    "prefix": ["foreach"],
    "body": [
      "for (${1:type} ${2:item} : ${3:collection}) {",
      "\t$4",
      "}"
    ],
    "description": "Enhanced for loop"
  },
  "Try-Catch (Experimental)": {
    "prefix": ["try"],
    "body": [
      "try {",
      "\t$1",
      "} catch (${2:ErrorType} ${3:e}) {",
      "\t$4",
      "}"
    ],
    "description": "Experimental try/catch placeholder"
  },
  "Try-Catch-Finally (Experimental)": {
    "prefix": ["tryfinally"],
    "body": [
      "try {",
      "\t$1",
      "} catch (${2:ErrorType} ${3:e}) {",
      "\t$4",
      "} finally {",
      "\t$5",
      "}"
    ],
    "description": "Experimental try/catch/finally placeholder"
  },
  "Class Definition": {
    "prefix": ["class"],
    "body": [
      "class ${1:ClassName} {",
      "\t$2",
      "}"
    ],
    "description": "Class definition"
  },
  "Method Definition": {
    "prefix": ["method"],
    "body": [
      "${1:public} ${2:kaam} ${3:methodName}(${4:params}) {",
      "\t$5",
      "}"
    ],
    "description": "Method definition"
  },
  "Variable Declaration - Number": {
    "prefix": ["num"],
    "body": [
      "num ${1:variableName} = ${2:0};"
    ],
    "description": "Number variable"
  },
  "Variable Declaration - String": {
    "prefix": ["sab"],
    "body": [
      "sab ${1:variableName} = \"${2:value}\";"
    ],
    "description": "String (sab) variable"
  },
  "Variable Declaration - Boolean": {
    "prefix": ["kya"],
    "body": [
      "kya ${1:flag} = ${2:true};"
    ],
    "description": "Boolean (kya) variable"
  },
  "Variable Declaration - Decimal": {
    "prefix": ["duo"],
    "body": [
      "duo ${1:variableName} = ${2:0.0};"
    ],
    "description": "Decimal (duo) variable"
  },
  "Array Declaration": {
    "prefix": ["array"],
    "body": [
      "${1:num}[] ${2:arrayName} = new ${1:num}[${3:size}];"
    ],
    "description": "Array declaration"
  },
  "Return Statement": {
    "prefix": ["return"],
    "body": [
      "return $1;"
    ],
    "description": "Return statement"
  },
  "Init Method Pattern": {
    "prefix": ["init"],
    "body": [
      "kaam init(${1:params}) {",
      "\t$2",
      "}"
    ],
    "description": "Initialization method pattern"
  },
  "Hello World": {
    "prefix": ["hello"],
    "body": [
      "class Main {",
      "\tstatic kaam main() {",
      "\t\tprintLine(\"Hello, DhrLang!\");",
      "\t}\n}"
    ],
    "description": "Hello World template"
  }
}