{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "DhrLang",
  "scopeName": "source.dhrlang",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#constants"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.dhrlang",
          "begin": "//",
          "end": "$",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.dhrlang"
            }
          }
        },
        {
          "name": "comment.block.dhrlang",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.dhrlang"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.dhrlang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.dhrlang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.dhrlang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.dhrlang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.dhrlang",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?[fFdD]?\\b"
        },
        {
          "name": "constant.numeric.integer.dhrlang",
          "match": "\\b\\d+[lL]?\\b"
        },
        {
          "name": "constant.numeric.hex.dhrlang",
          "match": "\\b0[xX][0-9a-fA-F]+[lL]?\\b"
        },
        {
          "name": "constant.numeric.octal.dhrlang",
          "match": "\\b0[0-7]+[lL]?\\b"
        },
        {
          "name": "constant.numeric.binary.dhrlang",
          "match": "\\b0[bB][01]+[lL]?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.dhrlang",
          "match": "\\b(अगर|नहीं तो अगर|नहीं तो|जबकि|के लिए|करो|जबतक|स्विच|केस|डिफ़ॉल्ट|break|continue|if|else if|else|while|for|do|until|switch|case|default)\\b"
        },
        {
          "name": "keyword.control.flow.dhrlang",
          "match": "\\b(वापसी|return|throw|कोशिश|try|पकड़ना|catch|अंततः|finally)\\b"
        },
        {
          "name": "keyword.other.dhrlang",
          "match": "\\b(नया|new|यह|this|सुपर|super|null|instanceof|extends|implements|abstract|final|static|synchronized|volatile|transient|native|strictfp)\\b"
        },
        {
          "name": "keyword.other.dhrlang",
          "match": "\\b(स्टैटिक|static|अंतिम|final|सार|abstract|निजी|private|संरक्षित|protected|सार्वजनिक|public)\\b"
        },
        {
          "name": "keyword.other.package.dhrlang",
          "match": "\\b(import|package)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.dhrlang",
          "match": "\\b(संख्या|int|integer|दशमलव|float|double|बूलियन|boolean|चार|char|स्ट्रिंग|string|byte|short|long)\\b"
        },
        {
          "name": "storage.type.object.dhrlang",
          "match": "\\b(क्लास|class|इंटरफेस|interface|एनम|enum|void)\\b"
        },
        {
          "name": "storage.type.generic.dhrlang",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.dhrlang",
          "match": "(\\+|\\-|\\*|\\/|%|\\+\\+|\\-\\-)"
        },
        {
          "name": "keyword.operator.comparison.dhrlang",
          "match": "(==|!=|<|<=|>|>=)"
        },
        {
          "name": "keyword.operator.logical.dhrlang",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.dhrlang",
          "match": "(&|\\||\\^|~|<<|>>|>>>)"
        },
        {
          "name": "keyword.operator.assignment.dhrlang",
          "match": "(=|\\+=|\\-=|\\*=|\\/=|%=|&=|\\|=|\\^=|<<=|>>=|>>>=)"
        },
        {
          "name": "keyword.operator.ternary.dhrlang",
          "match": "(\\?|:)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.main.dhrlang",
          "match": "\\b(मुख्य|main)\\s*(?=\\()"
        },
        {
          "name": "entity.name.function.builtin.dhrlang",
          "match": "\\b(प्रिंट|print|println|System\\.out\\.print|System\\.out\\.println)\\s*(?=\\()"
        },
        {
          "name": "entity.name.function.dhrlang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.dhrlang",
          "match": "\\b(true|false|null|सही|गलत|खाली)\\b"
        },
        {
          "name": "constant.other.dhrlang",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        }
      ]
    }
  }
}