// Simple test program for DhrLang
// This uses English keywords that the compiler can handle

main() {
    // Variable declarations
    int age = 25;
    string name = "John";
    double salary = 50000.50;
    boolean isEmployed = true;
    
    // Print statements
    print("=== DhrLang Test Program ===");
    print("Name: " + name);
    print("Age: " + age);
    print("Salary: $" + salary);
    
    // Conditional statements
    if (age >= 18) {
        print("You are an adult!");
        
        if (isEmployed) {
            print("You are employed.");
        } else {
            print("You are unemployed.");
        }
    } else {
        print("You are a minor.");
    }
    
    // Loop example
    print("Counting from 1 to 5:");
    for (int i = 1; i <= 5; i = i + 1) {
        print("Count: " + i);
    }
    
    // Array example
    int[] numbers = [10, 20, 30, 40, 50];
    print("Array elements:");
    for (int j = 0; j < 5; j = j + 1) {
        print("Element " + j + ": " + numbers[j]);
    }
    
    // Function call
    int sum = addNumbers(10, 20);
    print("Sum: " + sum);
}

// Function definition
int addNumbers(int a, int b) {
    return a + b;
}

// Class example
class Person {
    public string name;
    public int age;
    
    constructor Person(string name, int age) {
        this.name = name;
        this.age = age;
    }
    
    public void introduce() {
        print("Hello, my name is " + name + " and I am " + age + " years old.");
    }
}